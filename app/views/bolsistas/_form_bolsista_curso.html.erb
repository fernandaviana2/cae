<fieldset style = "background-color:#C1FFC1;"><legend><b>Informações Curso</b></legend>
 
 <p><b><label> Curso: </label></b> <%= @curso.nome_curso %> </p> 
 <p><b><label>Semestre Inicial Curso: </label></b><%= f.select :semestre_inicial_curso, ([ ["     ", "     "], ["1º", 1], ["2º", 2] ]) %> </p>
 <p><b><label> Ano Inicial Curso:</label></b><%= f.select :ano_inicial_curso, (["     ", "2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011","2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022", " 2023", "2024", "2025", "2026", "2027", "2028", "2029", "2030"]) %> </p>
 <p><b><label>Período Atual: </label></b><%= f.select :periodo_atual, (("1"..@curso.numero_periodo).to_a) %> </p>
  
  <div class="form-actions">
   <%= f.submit nil, :class => 'btn btn-primary' %>
   <%= link_to t('Voltar'),bolsista_curso_path, :class => 'btn' %>
 </div>
</fieldset><br>
